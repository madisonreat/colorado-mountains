<div class="booyah-box col-10 offset-1">
  <h1>Add your favorite mountain</h1>
  <%= simple_form_for @mountain do |f| %>
    <%= f.input :name %>
    <%= f.input :elevation %>
    <%= f.input :description %>
    <br />
    <%= f.submit 'Create', class: 'btn btn-primary' %>
  <% end %>
</div>